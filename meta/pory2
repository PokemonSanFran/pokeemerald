//MasterDojo_Lobby

script MasterDojo_Lobby_Welcome{
    lock
        faceplayer
        setvar(VAR_FRONTIER_FACILITY,FRONTIER_FACILITY_SPARRING)
        setvar(VAR_FRONTIER_BATTLE_MODE,FRONTIER_MODE_SINGLES)
        special(SavePlayerParty)
        msgbox(MasterDojo_Lobby_Text_HiyahPlayer,MSGBOX_DEFAULT)
        message(MasterDojo_Lobby_DoYouWant)
        waitmessage
        multichoice(17,6,MULTI_CHALLENGEINFO,FALSE)
        switch(var(VAR_RESULT)){
            case 0: goto(MasterDojo_Lobby_EventScript_EnterChallenge)
            case 1: goto(MasterDojo_Lobby_EventScript_ExplainChallenge)
            case 2: goto(MasterDojo_Lobby_EventScript_CancelChallenge)
            case MULTI_B_PRESSED: goto(MasterDojo_Lobby_EventScript_CancelChallenge)
        }
}

script MasterDojo_Lobby_EventScript_EnterChallenge{
    message MasterDojo_Lobby_Text_WhichLevelMode
    waitmessage
    multichoice(17,6,MULTI_LEVEL_MODE,FALSE)
    switch(var(VAR_RESULT)){
        case FRONTIER_LVL_TENT: goto(MasterDojo_Lobby_EventScript_CancelChallenge) 
        case MULTI_B_PRESSED: goto(MasterDojo_Lobby_EventScript_CancelChallenge)
}
    frontier_checkineligible // what is this checking for?
    goto_if_eq(VAR_0x8004, TRUE, MasterDojo_Lobby_EventScript_NotEnoughValidMons)
    frontier_set(FRONTIER_DATA_LVL_MODE,VAR_RESULT)
    msgbox(MasterDojo_Lobby_Text_SelectThreeMons, MSGBOX_DEFAULT)
    fadescreen(FADE_TO_BLACK)
    call(BattleFrontier_EventScript_GetLvlMode)
    copyvar(VAR_0x8004,VAR_RESULT)
    setvar
}
